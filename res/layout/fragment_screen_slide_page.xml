<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccc" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"        
        >
        
    <TextView android:id="@+id/name"
            style="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
    />
    
    <TextView android:id="@+id/position"
            style="?android:textAppearanceMedium"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
    />
        
    <TextView android:id="@+id/department"
            style="?android:textAppearanceMedium"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
    />
    
    <TextView android:id="@+id/university"
            style="?android:textAppearanceMedium"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
    />
    
    <TextView android:id="@+id/interest"
            style="?android:textAppearanceSmall"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
    />
    
    

    <!-- Dummy content. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
               
        <ImageView android:id="@+id/homepageicon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:src="@drawable/ic_homepage"
        />
        
        <ImageView android:id="@+id/linkedinicon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:src="@drawable/ic_linkedin"
        />
        
        

    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
               
        <ImageView android:id="@+id/googlescholaricon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:src="@drawable/ic_googlescholar"
        />
        
        <ImageView android:id="@+id/researchgateicon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:src="@drawable/ic_researchgate"
        />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add" 
            android:onClick="onClick"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Delete" 
            android:onClick="onClick"/>
        
    </LinearLayout>
 </LinearLayout>
</ScrollView>
